@model StudentApp.Domain.Entities.Estudiante

@{
    ViewData["Title"] = "Eliminar Estudiante";
}

<h1>¿Está seguro que desea eliminar este estudiante?</h1>

<div>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Documento:</strong> @Model.Documento</p>
    <p><strong>Correo:</strong> @Model.Correo</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>