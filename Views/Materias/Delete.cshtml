@model StudentApp.Domain.Entities.Materia

@{
    ViewData["Title"] = "Eliminar Materia";
}

<h1>¿Está seguro que desea eliminar esta materia?</h1>

<div>
    <h4>Materia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Código</dt>
        <dd class="col-sm-10">@Model.Codigo</dd>

        <dt class="col-sm-2">Créditos</dt>
        <dd class="col-sm-10">@Model.Creditos</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>