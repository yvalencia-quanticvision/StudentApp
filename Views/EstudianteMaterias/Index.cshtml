@model IEnumerable<StudentApp.Domain.Entities.EstudianteMateria>

@{
    ViewData["Title"] = "Inscripciones";
}

<h1>Inscripciones de Estudiantes a Materias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Inscripción</a>
</p>

<a asp-controller="Estudiantes" asp-action="Index" class="btn btn-secondary">Volver a Estudiantes</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Estudiante</th>
            <th>Materia</th>
            <th>Fecha de Inscripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inscripcion in Model)
        {
            <tr>
                <td>@inscripcion.Estudiante?.Nombre</td>
                <td>@inscripcion.Materia?.Name</td>
                <td>@inscripcion.FechaInscripcion.ToShortDateString()</td>
                <td>
                    <a asp-action="Delete" asp-route-estudianteId="@inscripcion.EstudianteId" asp-route-materiaId="@inscripcion.MateriaId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
